# =============================================================================
# Django Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-generate-a-new-one-for-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=127.0.0.1,localhost

# Database (for production - uses SQLite in development by default)
DB_NAME=schedule_manage
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# Redis (for Celery - optional)
REDIS_URL=redis://127.0.0.1:6379/0

# Security (production only)
SECURE_SSL_REDIRECT=False

# Algorithm Settings (optional overrides)
# SCHEDULING_TIMEOUT_SECONDS=300
# MAX_CONCURRENT_JOBS=3
